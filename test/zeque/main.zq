fn fib(n: i32) i32 {
    if lt(n, 2) {
        n
    } else {
        fib(n - 1) + fib(n - 2)
    }
}

// delegate to a fake @lessThan builtin function.
fn lt(a: i32, b: i32) bool {
    @lessThan(a, b)
}

// In theory this is built in.
